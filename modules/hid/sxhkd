#! /usr/bin/env dash
# WMRC_DEPS: sxhkd
# WMRC_FLAGS:

reload() {

  [ -z "$(pgrep -u "$(whoami)" sxhkd)" ] && \
    error "Sxhkd is not running!" fatal 2

  pkill -USR1 -x sxhkd

}


start() {

  [ -z "$(pgrep -u "$(whoami)" sxhkd)" ] || \
    error "Sxhkd is already running!" fatal 2

  sxhkd &

}

stop() {

  [ -z "$(pgrep -u "$(whoami)" sxhkd)" ] && \
    error "Sxhkd is not running!" fatal 3

  local PID
  
  for PID in $(pgrep -u "$(whoami)" sxhkd); do
    kill -9 "$PID"
  done

}

. "$MODULES/init"